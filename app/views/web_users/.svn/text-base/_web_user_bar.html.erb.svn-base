<% if logged_in? -%>
  <div id="web_user-bar-greeting">Logged in as <%= link_to_current_web_user :content_method => :login %></div>
  <div id="web_user-bar-action"  >(<%= link_to "Log out", logout_path, { :title => "Log out" }    %>)</div>
<% else -%>
  <div id="web_user-bar-greeting"><%= link_to_login_with_IP 'not logged in', :style => 'border: none;' %></div>
  <div id="web_user-bar-action"  ><%= link_to "log in",  login_path,  { :title => "Log in" } %> /
                               <%= link_to "sign up", signup_path, { :title => "Create an account" } %></div>
<% end -%>
