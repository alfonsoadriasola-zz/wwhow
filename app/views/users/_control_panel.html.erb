<div id="user-control-panel">
    <div> <%= link_to '<strong>Your Account</strong>',
            {:controller => 'users',
                    :action => 'edit',
                    :id => current_web_user.user.id } %> </div>
    <%= render_partial '/users/public' %>
    <div id="user_preferences">
        <div>
            <strong><%= link_to "Favorites", :action => 'manage_favorites', :id => current_web_user.user.id %>
                only </strong>   &nbsp;
            <input id="ucp_user_show_friends_only" name="user[show_friends_only]"
                   type="checkbox" <%= 'checked' if @user.show_friends_only? %>
                   onclick="set_show_friends_only(<%=!@user.show_friends_only%>);"
                   title="only show posts by favorite users"
            />
        </div>
        <div>
            <strong title="include posts which have undetermined location?">Show unmapped</strong> &nbsp;
            <input id="ucp_user_show_unmapped" name="user[show_unmapped]"
                   type="checkbox" <%= 'checked' if @filter[:show_unmapped]==true %>
                   onclick="set_show_unmapped(<%=!@filter[:show_unmapped]==true %>);"
                   title="only show posts by favorite users"
            /></div>
    </div>


</div>