<td colspan="7">
    <% form_remote_for(:blog_entry, @blog_entry, :url => {:controller => "users", :action =>"update_blog_entry"} ) do |f| %>
        <%= hidden_field :blog_entry, :id %>

        <div id="errors-<%=@blog_entry.id%>" class="error"><%= f.error_messages %>
        <%= flash[:error] %>
        </div>
        
        <table>
            <tr>
                <td class="editing">
                    <p> <label> What:</label>
                        <%= f.text_field :what, :size =>30 -%>
                    </p>

                    <p> <label> tags:</label>
                       <%= f.text_area :category_list, :size =>"20x3", :value => @blog_entry.category_list -%></p>

                    <p> <label> Where:</label>
                        <%= f.text_field :where, :size => 66%>
                    </p>

                    <p> <label>How Much:</label>
                        <%= f.text_field :price , :size=> 6, :value => number_with_precision(@blog_entry.price, 2) %>
                    </p>
                    
                    <p> <label>Rating:</label>
                        <%= render :partial => "ratings/rate", :locals => { :asset => @blog_entry } %>
                    </p>
                </td>

            </tr>
            <tr>
                <td colspan="7">

                    <%= submit_tag "save", {:class=>"button"} %>

                    <%= link_to_remote "remove",
                            {:url => { :controller => 'users', :action => 'destroy_blog_entry', :blog_entry_id =>  @blog_entry.id },
                                    :confirm => "It will be gone! Sure?"},
                            {:class=> 'button'} %>
                </td>
            </tr>
        </table>
    <% end %>
</td>