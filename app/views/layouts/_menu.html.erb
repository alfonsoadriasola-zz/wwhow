<div id="menu">
    <div style="position:relative">
        <table>
            <tr>
                <% if logged_in? -%>
                    <td>
                <span id="web_user-bar-greeting">
                     <span id="menuL"></span>
                    <%= link_to current_web_user.user.name,
                            {:controller => 'users',
                                    :action => 'edit',
                                    :id => current_web_user.user.id },
                            {:class=> 'button'} %>
                    is logged in 
                </span>

                         |
                        
                    </td>
                    <td>
                <span id="web_user-bar-action">
                <%= link_to "Log out", logout_path, { :title => "Log out", :class=> 'button'} %>
                </span>
                    </td>
                <% else -%>
                    <td>

                        <span id="web_user-bar-greeting"><%= link_to "Log In", login_path, {:class=> 'button'} %> </span>|
                    </td>

                    <td>
                <span id="web_user-bar-signup">
                      <%= link_to "Sign Up", signup_path, { :title => "Create an account", :class=> 'button'} %>
                </span>
                    </td>


                <% end -%>
                <td>
                    | <span><%= link_to 'About', '/about', {:class => 'button'} %></span>

                </td>

                <td>| <span><%= link_to 'Help', '/help', {:class => 'button'} %> </span></td>
            </tr>
        </table>
    </div>

</div>
