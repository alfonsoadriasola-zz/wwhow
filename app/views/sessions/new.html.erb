<div class="centered-sm" style="position:relative" >

    <h2> Welcome to WWHOW!</h2>
    <div id="loginBox" >

        <table>
             <colgroup style="color: navy" align="char" char=".">
            <col width="60%" align="left"/>
            <col width="40%" align="center"/>
            <tbody>
            <tr>
                <td>
                    <% form_tag session_path do -%>
                        <p><%= label_tag 'username:' %>
                            <%= text_field_tag 'login', @login, :size => 30 %></p>

                        <p><%= label_tag 'password:' %>
                            <%= password_field_tag 'password', nil, :size => 30 %></p>

                        <p><%= label_tag 'remember_me', 'Remember me' %>
                            <%= check_box_tag 'remember_me', '1', @remember_me %>
                            <%= submit_tag 'Log in', {:class=>"buttonRed"} %> <br/>
                        </p>

                        <p class="centered-xxs" align="center"><%= link_to 'Forgot your password?', forgot_password_url %></p>


                    <% end -%></td>
                <td style="text-align:center">
                    <p><strong> New to WWHOW? </strong></p>

                    <p><em> Sign up and share some savings.</em></p>

                    <%= link_to 'Sign up!', signup_path, {:class => 'buttonRed'} %>
                </td>

            </tr>
            </tbody>

        </table>

        <span style="position: absolute; z-index: 10; width: 200px; right: -175px; height: 268px; top: 0px;" id="tipsy-headset"></span>
    </div>

    <script type="text/javascript">$('login').focus(); </script>
</div>